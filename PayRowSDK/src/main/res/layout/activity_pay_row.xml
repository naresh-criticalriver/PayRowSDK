<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PayRowActivity">

    <ProgressBar
        android:id="@+id/progressBar_Initalizing"
        style="?android:attr/progressBarStyle"
        android:layout_width="127dp"
        android:layout_height="118dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="242dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="242dp"
        android:clickable="false"
        android:focusable="auto"
        android:visibility="visible"
        android:indeterminateDrawable="@drawable/ic_loading_icons_green"
        android:focusableInTouchMode="false"
        android:foregroundGravity="top|left|bottom|center_vertical|right|center_horizontal"
        android:indeterminate="true"
        android:indeterminateDuration="10000"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>